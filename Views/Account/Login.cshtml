@model Login

@{
    ViewData["Title"] = "Login";
}

<section id="hero">
    <div class="hero-container">
        <div class="container my-5 px-0">
            <!--Section: Content-->
            <section class="p-5 my-md-5 text-center">
                <form class="my-5 mx-md-5" asp-action="Login">
                    <div class="row">
                        <div class="col-md-6 mx-auto">
                            <!-- Material form login -->
                            <div class="card">
                                <!--Card content-->
                                <div class="card-body">
                                    <!-- Form -->
                                    <form class="text-center" style="color: #757575;" asp-action="Login">
                                        <h3 class="font-weight-bold my-4 pb-2 text-center dark-grey-text">Log In</h3>
                                        <!-- Name -->
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                        <input asp-for="Email" class="form-control mb-4" placeholder="Email" />
                                        <!-- Email -->
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <div class="text-center">
                                            <input type="submit" value="Submit" class="btn btn-outline-green btn-login btn-rounded my-4 waves-effect"></input>
                                        </div>
                                    </form>
                                    <!-- Form -->
                                </div>
                            </div>
                            <!-- Material form login -->
                        </div>
                    </div>
                </form>
            </section>
            <!--Section: Content-->
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
